@page
@model TaskManager.Api.Pages.CreateModel
@{
    ViewData["Title"] = "Создать задачу";
}

<h2>Создать задачу</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Task.Title" class="form-label">Заголовок</label>
        <input asp-for="Task.Title" class="form-control" />
        <span asp-validation-for="Task.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Task.Description" class="form-label">Описание</label>
        <textarea asp-for="Task.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Task.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Task.DueDate" class="form-label">Срок выполнения</label>
        <input asp-for="Task.DueDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="Task.DueDate" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Task.IsDone" class="form-check-input" />
        <label asp-for="Task.IsDone" class="form-check-label">Выполнено</label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            💾 Сохранить
        </button>
        <a asp-page="/Index" class="btn btn-secondary">
            ❌ Отмена
        </a>
    </div>
</form>

@section Scripts {
    <partial name="Shared/_ValidationScriptsPartial" />
}