@page
@model IndexModel
@{
    ViewData["Title"] = Model.IsSearchMode ? "Поиск задач" : "Список задач";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@(Model.IsSearchMode ? "Поиск задач" : "Список задач")</h1>
    <a asp-page="/Create" class="btn btn-primary">Создать задачу</a>
</div>

<!-- Форма поиска -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="q" class="form-control" placeholder="Введите название или описание задачи..." 
                       value="@Model.SearchQuery" />
            </div>
            <div class="col-md-2">
                <input type="number" name="pageSize" class="form-control" placeholder="Размер страницы" 
                       value="@Model.PageSize" min="1" max="100" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Поиск</button>
            </div>
        </form>
        @if (Model.IsSearchMode)
        {
            <div class="mt-2">
                <a asp-page="/Index" class="btn btn-sm btn-outline-secondary">Показать все задачи</a>
            </div>
        }
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.IsSearchMode && Model.SearchResult != null)
{
    <div class="alert alert-info">
        Найдено задач: <strong>@Model.SearchResult.TotalCount</strong>
        @if (Model.SearchResult.TotalCount > 0)
        {
            <span> (страница @Model.SearchResult.Page из @Model.SearchResult.TotalPages)</span>
        }
    </div>
}

@if (Model.Tasks.Count == 0)
{
    <div class="alert alert-info">
        <p class="mb-0">
            @if (Model.IsSearchMode)
            {
                <text>По запросу "@Model.SearchQuery" ничего не найдено.</text>
            }
            else
            {
                <text>Задач пока нет. <a asp-page="/Create">Создайте первую задачу</a></text>
            }
        </p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Срок выполнения</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td>@task.Id</td>
                        <td>@task.Title</td>
                        <td>@(task.Description ?? "-")</td>
                        <td>@task.DueDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (task.IsDone)
                            {
                                <span class="badge bg-success">Выполнено</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">В работе</span>
                            }
                        </td>
                        <td>
                            <a asp-page="/Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Редактировать</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@task.Id" class="d-inline" onsubmit="return confirm('Вы уверены, что хотите удалить эту задачу?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация для результатов поиска -->
    @if (Model.IsSearchMode && Model.SearchResult != null && Model.SearchResult.TotalPages > 1)
    {
        <div class="text-center text-muted mb-2">
            Страница @Model.SearchResult.Page из @Model.SearchResult.TotalPages
        </div>
        <nav aria-label="Навигация по страницам">
            <ul class="pagination justify-content-center">
                @if (Model.SearchResult.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Index" asp-route-q="@Model.SearchQuery" asp-route-pageNumber="@(Model.SearchResult.Page - 1)" asp-route-pageSize="@Model.PageSize">Предыдущая</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Предыдущая</span>
                    </li>
                }

                @for (int i = Math.Max(1, Model.SearchResult.Page - 2); i <= Math.Min(Model.SearchResult.TotalPages, Model.SearchResult.Page + 2); i++)
                {
                    <li class="page-item @(i == Model.SearchResult.Page ? "active" : "")">
                        <a class="page-link" asp-page="/Index" asp-route-q="@Model.SearchQuery" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }

                @if (Model.SearchResult.Page < Model.SearchResult.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Index" asp-route-q="@Model.SearchQuery" asp-route-pageNumber="@(Model.SearchResult.Page + 1)" asp-route-pageSize="@Model.PageSize">Следующая</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Следующая</span>
                    </li>
                }
            </ul>
        </nav>
    }
}
